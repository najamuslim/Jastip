<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".login">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/market" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="270dp"
        android:background="@drawable/email"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingLeft="40dp"
        android:paddingBottom="20dp"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-250dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:background="@drawable/password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Forget Your Password?"
        android:textColor="#ffffff" />

    <ImageButton
        android:id="@+id/LoginBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/loginbtn1" />

    <ImageView
        android:id="@+id/path1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/path81" />

    <ImageView
        android:id="@+id/path2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/path1"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-168dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/path82" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="Or" />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@+id/or"
        android:layout_alignEnd="@+id/or"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/facebook" />

    <ImageButton
        android:id="@+id/google"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/facebook"
        android:layout_toEndOf="@+id/or"
        android:background="@drawable/google" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:textSize="12sp"
        style="@style/Base.Theme.AppCompat.Light"
        android:textColor="#ffffff"
        android:text="Terms &amp; Conditions" />


</RelativeLayout>