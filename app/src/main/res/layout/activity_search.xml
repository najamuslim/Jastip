<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/searchingbg"
    tools:context=".Search">

    <RelativeLayout
        android:layout_width="322dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/city"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Date"
            android:text="City"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/date"
            android:layout_marginStart="25dp"
            android:text="Date"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/cityname"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/cityname"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="date" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/currentraveler"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/currenttravelbtn" />

    <ImageButton
        android:id="@+id/searchbtn1"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="124dp"
        android:background="@drawable/searchbtn" />

    <ImageButton
        android:id="@+id/backbtn1"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/backbtn" />

</RelativeLayout>